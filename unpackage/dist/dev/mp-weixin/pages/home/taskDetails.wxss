.task-details .swiper_group .swiper_image {
  width: 100%;
}
.task-details .content_group {
  background: #f4f4f4;
  margin-bottom: 160rpx;
}
.task-details .content_group .task_top {
  background: #FFFFFF;
  margin: 0 0 20rpx 0;
  padding: 0 16rpx;
}
.task-details .content_group .task_top .name {
  padding: 20rpx 0 0 0;
}
.task-details .content_group .task_top .name text {
  font-size: 30rpx;
  color: #333;
}
.task-details .content_group .task_top .name .job {
  float: right;
  color: #666;
  font-size: 28rpx;
}
.task-details .content_group .task_top .integral {
  font-size: 20px;
  color: #FF5229;
  padding: 8rpx 0;
}
.task-details .content_group .task_top .integral .integral_title {
  font-size: 24rpx;
  color: #333;
  margin-left: 4rpx;
}
.task-details .content_group .task_top .company {
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  height: 80rpx;
  line-height: 80rpx;
}
.task-details .content_group .task_top .company image {
  width: 28rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
}
.task-details .content_group .task_top .company text {
  font-size: 28rpx;
  margin: 0 0 0 8rpx;
  color: #333333;
}
.task-details .content_group .task_top .company .shop_loc {
  font-size: 24rpx;
  color: #999;
  float: right;
}
.task-details .content_group .task {
  margin: 0 0 20rpx 0;
  padding: 0 16rpx;
  background: #FFFFFF;
}
.task-details .content_group .task view {
  height: auto;
  overflow: hidden;
}
.task-details .content_group .task view image {
  width: 28rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
}
.task-details .content_group .task view text {
  font-size: 28rpx;
  margin: 0 0 0 8rpx;
  color: #333333;
}
.task-details .content_group .task text {
  clear: both;
  line-height: 40rpx;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.task-details .footer {
  height: 96rpx;
  line-height: 96rpx;
  border-top: #E5E5E5 solid 1px;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.task-details .footer button {
  width: 254rpx;
  float: left;
  text-align: center;
  background: white;
  border: none !important;
  border-radius: 0;
  height: 100%;
}
.task-details .footer button image {
  width: 28rpx;
  height: 24rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
}
.task-details .footer button::after {
  content: '';
  border: none;
  position: static;
}
.task-details .footer view {
  width: 495rpx;
  float: right;
  text-align: center;
  background: #277BFF;
  height: 96rpx;
  color: white;
  font-size: 28rpx;
}

