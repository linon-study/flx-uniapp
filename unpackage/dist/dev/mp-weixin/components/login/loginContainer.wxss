.phone {
  background: white;
  min-height: 100%;
  width: 100%;
}
.phone .phone_top {
  position: relative;
  height: 400rpx;
}
.phone .phone_top image {
  width: 100%;
  position: absolute;
}
.phone .phone_top view {
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  z-index: 10;
  color: white;
  width: 100%;
  top: 96rpx;
}
.phone .phone_top view text {
  display: block;
}
.phone .btn {
  margin: 60rpx 60rpx;
  background: #0098ff;
  color: white;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  margin-top: 70rpx;
}
.phone .btn_defualt {
  margin: 60rpx 60rpx;
  background: #fff;
  border: 1px solid #0098FF;
  color: #0098FF;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  margin-top: 70rpx;
}
.phone .agreement {
  padding: 5px 30px;
  text-align: center;
}
.phone .agreement text {
  display: inline-block;
  color: #000;
  font-size: 28rpx;
}
.phone .agreement .link_btn {
  display: inline-block;
  color: #0098FF;
  font-size: 28rpx;
}

