.line_default {
  width: 380rpx;
}
.line_default image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 8rpx;
}
.line_default text {
  font-size: 24rpx;
  margin-left: 18rpx;
  color: #999;
}
.list {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: white;
  padding: 38rpx 0;
  position: relative;
  border-top: 1rpx solid #e5e5e5;
}
.list .img_left {
  float: left;
}
.list .img_left image {
  width: 160rpx;
  height: 160rpx;
}
.list .content_right {
  margin: 0 0 0 20rpx;
  width: 530rpx;
  float: right;
}
.list .content_right .one_line .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.list .content_right .one_line .pos_integral {
  color: #FF5229;
  font-size: 26rpx;
  float: right;
  font-family: Microsoft YaHei;
}
.list .content_right .apply_btn {
  width: 140rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #FD9A00;
  color: white;
  position: absolute;
  right: 0rpx;
  bottom: 38rpx;
  font-size: 24rpx;
  padding: 0 10px;
  border: none;
}

